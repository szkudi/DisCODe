<?xml version="1.0" encoding="utf-8"?>
<Task>
	<Components>
		<CameraOpenCV type="CameraOpenCV" thread="Thread1" group="s1">
		</CameraOpenCV>
		
		<Window type="CvWindow" thread="Thread1" group="s1">
			<title>Preview</title>
		</Window>
		
		<Mrrocpp type="Mrrocpp" thread="Thread1" group="s1">
		</Mrrocpp>
	</Components>

	<Executors>
		<Thread1 type="continous">
			<main_component>CameraOpenCV</main_component>
		</Thread1>
	</Executors>

	<Events>
		<Event source="CameraOpenCV.newImage" destination="Window.onNewImage"/>
		<Event source="CameraOpenCV.newImage" destination="Mrrocpp.onNewImage"/>
	</Events>

	<DataStreams>
		<CameraOpenCV>
			<out_img type="out" group="Con1"/>
		</CameraOpenCV>
		<Window>
			<in_img type="in" group="Con1"/>
		</Window>
		<Mrrocpp>
			<in_img type="in" group="Con1"/>
		</Mrrocpp>
	</DataStreams>
</Task>
